{
    "$schema": "http://json-schema.org/schema#",
    "title": "Weather Report",
    "description": "UK weather summary data",
    "type": "object",
    "properties": {
        "cities": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "weather": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "id": {
                                    "type": "integer",
                                    "minimum": 0
                                },
                                "main": {
                                    "type": "string",
                                    "enum": [
                                        "Clouds",
                                        "Sun",
                                        "Rain",
                                        "Snow"
                                    ]
                                },
                                "description": {
                                    "type": "string"
                                }
                            },
                            "required": [
                                "id",
                                "main",
                                "description"
                            ]
                        }
                    },
                    "main": {
                        "type": "object",
                        "properties": {
                            "temp": {
                                "type": "number",
                                "minimum": 0.0
                            }
                        },
                        "required": [
                            "temp"
                        ]
                    },
                    "wind": {
                        "type": "object",
                        "properties": {
                            "speed": {
                                "type": "number",
                                "minimum": 0.0
                            },
                            "deg": {
                                "type": "integer",
                                "minimum": 0
                            },
                            "dir": {
                                "type": "string"
                            },
                            "chillfactor": {
                                "type": "number",
                                "minimum": 0.0
                            }
                        },
                        "required": [
                            "speed",
                            "deg",
                            "dir",
                            "chillfactor"
                        ]
                    },

                    "name": {
                        "type": "string"
                    }
                },
                "required": [
                
                    "weather",
                 	 "main",
                     "wind",
                     "name"
                ]
            }
        }
    },
    "required": [
        "cities"
    ]
}